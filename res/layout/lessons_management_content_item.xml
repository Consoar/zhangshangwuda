<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	
    <TextView
        android:id="@+id/lessons_management_content_item_id"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:visibility="gone" />
    
    <TextView
        android:id="@+id/lessons_management_content_item_courseName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10.0dip"
        android:layout_toLeftOf="@+id/lessons_management_content_item_score"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="CourseName"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lessons_management_content_item_score"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10.0dip"
        android:gravity="right|center_vertical"
        android:singleLine="true"
        android:text=""
        android:textColor="#000"
        android:textSize="18sp" />
    
</RelativeLayout>