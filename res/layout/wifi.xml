<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@null"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/wifi_RelativeLayout"
        android:layout_width="260dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@null"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/wifi_txtAccount_EditText"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/wifi_TextView01"
                android:background="@null"
                android:drawableBottom="@drawable/wifi_input_line"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:saveEnabled="true"
                android:textColor="?attr/newsContentTextColor" />

            <ImageButton
                android:id="@+id/wifi_txtAccount_more_Button"
                android:layout_width="40dip"
                android:layout_height="fill_parent"
                android:layout_alignBottom="@+id/wifi_txtAccount_EditText"
                android:layout_alignRight="@+id/wifi_txtAccount_EditText"
                android:layout_marginLeft="20dip"
                android:background="@drawable/list_item_bg"
                android:src="?attr/droppopmenu_expand_BG" />

            <TextView
                android:id="@+id/wifi_TextView01"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/wifi_txtAccount_EditText"
                android:gravity="center_vertical"
                android:text="@string/Wifi_strAccountInputLabel"
                android:textColor="#5a8082"
                android:textSize="18.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/wifi_txtPassword_EditText"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/wifi_TextView02"
                android:background="@null"
                android:drawableBottom="@drawable/wifi_input_line"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:saveEnabled="true"
                android:textColor="?attr/newsContentTextColor" />


            <TextView
                android:id="@+id/wifi_TextView02"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/wifi_txtPassword_EditText"
                android:gravity="center_vertical"
                android:text="@string/Wifi_strPasswordInputLabel"
                android:textColor="#5a8082"
                android:textSize="18.0sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="42dp"
        android:layout_below="@+id/wifi_RelativeLayout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" >

        <Button
            android:id="@+id/wifi_cmdLogin_Button"
            android:layout_width="60dp"
            android:layout_height="42dp"
            android:background="@drawable/wifi_login_btn"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/wifi_cmdLogout_Button"
            android:layout_width="60dp"
            android:layout_height="42dp"
            android:background="@drawable/wifi_login_btn"
            android:text="下线"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/wifi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="?attr/wifiLogoBG" />

    <ImageView
        android:id="@+id/wifi_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="?attr/wifiBottomBG" />

</RelativeLayout>