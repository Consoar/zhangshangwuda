        <item name="background">@drawable/ab_solid_dark_holo</item>
    </style>

    <style name="Theme.MySherlock" parent="@style/Theme.Sherlock">
        <item name="actionBarStyle">@style/Widget.MyTheme.ActionBar</item>
    </style>

    <style name="Widget.MyTheme.ActionBar.Light" parent="@style/Widget.Sherlock.ActionBar">
